(jbuild_version 1)

(library
 ((name      test_wodan)
  (modules   (test_wodan))
  (libraries (test irmin-mem wodan))))

(executable
 ((name      test)
  (modules   (test))
  (libraries (test_wodan))))

(alias
 ((name runtest)
  (package wodan)
  (deps (test.exe))
  (action (run ${exe:test.exe} -q --color=always))))
